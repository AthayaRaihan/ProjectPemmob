<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_login" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo_aplikasi"
        android:adjustViewBounds="true"
        android:contentDescription="Logo Wonosobo" />

    <!-- Wrapper form register -->
    <LinearLayout
        android:id="@+id/registerFormWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_form"
        android:layout_below="@id/logoImage"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Input Nama -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_form"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_users"
                android:contentDescription="User Icon" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="15dp"
                android:hint="Nama"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@null"
                android:inputType="textPersonName"/>
        </LinearLayout>

        <!-- Input Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_form"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_emailusers"
                android:contentDescription="Email Icon" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="15dp"
                android:hint="Email"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@null"
                android:inputType="textEmailAddress"/>
        </LinearLayout>

        <!-- Input Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_form"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_lock"
                android:contentDescription="Lock Icon" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:textSize="15dp"
                android:hint="Kata Sandi"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@null"
                android:inputType="textPassword"/>

            <ImageView
                android:id="@+id/ivTogglePassword"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_eye_closed"
                android:contentDescription="Toggle Password" />
        </LinearLayout>

        <!-- Input Konfirmasi Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_form"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_lock"
                android:contentDescription="Confirm Lock Icon" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:textSize="15dp"
                android:hint="Konfirmasi Kata Sandi"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@null"
                android:inputType="textPassword"/>

            <ImageView
                android:id="@+id/ivToggleConfirmPassword"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_eye_closed"
                android:contentDescription="Toggle Confirm Password" />
        </LinearLayout>

        <!-- Tombol Daftar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Daftar"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="30dp"
            android:padding="12dp" />

        <!-- Sudah punya akun -->
        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="Sudah Punya Akun?"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
