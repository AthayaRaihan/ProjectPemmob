                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <!-- Bottom Navigation Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>