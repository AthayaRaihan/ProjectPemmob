<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_login" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo_aplikasi"
        android:adjustViewBounds="true"
        android:contentDescription="Logo Wonosobo" />

    <!-- Wrapper form login -->
    <LinearLayout
        android:id="@+id/loginFormWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_form"
        android:layout_below="@id/logoImage"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Input Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_form"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp">

            <!-- Icon -->
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_users"
                android:contentDescription="Email Icon" />

            <!-- Input -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="15dp"
                android:hint="Email / Nama Pengguna"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@null"
                android:inputType="textEmailAddress"/>
        </LinearLayout>

        <!-- Input Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_form"
            android:paddingHorizontal="12dp">

            <!-- Icon -->
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_lock"
                android:contentDescription="Lock Icon" />

            <!-- Input -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:textSize="15dp"
                android:hint="Kata Sandi"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@null"
                android:inputType="textPassword"/>

            <!-- Toggle password (mata) -->
            <ImageView
                android:id="@+id/ivTogglePassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Toggle Password" />
        </LinearLayout>


        <!-- Lupa sandi & Belum punya akun -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lupa Kata Sandi?"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Belum Punya Akun?"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Tombol Masuk -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Masuk"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="30dp"
            android:padding="12dp" />

    </LinearLayout>

</RelativeLayout>
